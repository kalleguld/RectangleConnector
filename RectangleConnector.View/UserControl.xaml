<UserControl x:Class="RectangleConnector.View.UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RectangleConnector.View"
             xmlns:viewmodel="clr-namespace:RectangleConnector.ViewModel;assembly=RectangleConnector.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600"  d:DataContext="{d:DesignInstance viewmodel:ViewModel}">
    <UserControl.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <local:RectanglePaneView Grid.Column="0" DataContext="{Binding LeftPane}"/>
            <local:RectanglePaneView Grid.Column="1" DataContext="{Binding RightPane}"/>
        </Grid>
    </UserControl.Content>
</UserControl>
