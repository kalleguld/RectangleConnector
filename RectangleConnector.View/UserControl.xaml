<UserControl x:Class="RectangleConnector.View.UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RectangleConnector.View"
             xmlns:viewmodel="clr-namespace:RectangleConnector.ViewModel;assembly=RectangleConnector.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600"  d:DataContext="{d:DesignInstance viewmodel:MainViewModel}">
    <UserControl.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <local:RectanglePaneView Grid.Column="0" 
                                     DataContext="{Binding LeftPane}" 
                                     Background="AliceBlue"/>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <local:RectanglePaneView Grid.Column="2" 
                                     DataContext="{Binding RightPane}" 
                                     Background="Beige"/>
        </Grid>
    </UserControl.Content>
</UserControl>
